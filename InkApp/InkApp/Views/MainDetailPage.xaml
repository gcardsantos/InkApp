<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  xmlns:local="clr-namespace:InkApp.Views"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="InkApp.Views.MainDetailPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Go Test 1" 
                              TextColor="White"
                              BackgroundColor="Red" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/MainPage"/>
                <Button Text="Go Test 2"  
                              TextColor="White"
                              BackgroundColor="Black" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/PessoasPage"/>
                <Button Text="Feed"  
                              TextColor="White"
                              BackgroundColor="Black" 
                              Command="{Binding OnNavigateCommand}"
                              CommandParameter="NavigationPage/FeedPage"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
</MasterDetailPage>